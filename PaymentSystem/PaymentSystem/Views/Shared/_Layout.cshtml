@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService _authorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PaymentSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PaymentSystem.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="container"> 
        <nav class="navbar navbar-light bg-light justify-content-between">
            <div class="d-flex flex-row">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    PaymentSystem
                </a>
            </div>
            
            <div class="d-flex flex-row">
                @if ((await _authorizationService.AuthorizeAsync(User, "Admin")).Succeeded)
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="VerifiedFundTransfers">
                        Verified fund transfers
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Kyc" asp-action="VerifiedUsers">
                        Verified users
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Users">
                        Users
                    </a>
                }
                @if ((await _authorizationService.AuthorizeAsync(User, "KYC-Manager")).Succeeded)
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Kyc" asp-action="VerifiedUsers">
                        Verified users
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Kyc" asp-action="VerifyUsers">
                        Verify users
                    </a>
                }
                @if ((await _authorizationService.AuthorizeAsync(User, "Funds-Manager")).Succeeded)
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="VerifiedFundTransfers">
                        Verified fund transfers
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="UnverifiedFundTransfers">
                        Unverified fund transfers
                    </a>
                }
                @if ((await _authorizationService.AuthorizeAsync(User, "User")).Succeeded)
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="UserFundTransfers">
                        Fund transfers
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="CreateDeposit">
                        Deposit money
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Funds" asp-action="CreateWithdrawal">
                        Withdrawal money
                    </a>
                }
                @if (!User.Identity!.IsAuthenticated)
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">
                        Sign In
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">
                        Sign Up
                    </a>
                }
                else
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">
                        Profile
                    </a>
                    <button class="btn btn-light" onclick="location.href='@Url.Action("Logout", "Auth")'">
                        Logout
                    </button>
                }
            </div>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - PaymentSystem
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>