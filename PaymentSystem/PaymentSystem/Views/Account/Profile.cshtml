@model PaymentSystem.Models.UserProfile

@{
    ViewData["Title"] = "Profile";
}

<h4>Profile</h4>

<div>
    <table class="table table-striped table-dark">
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Registered at</th>
            <th>Is verified</th>
            <th>Balance</th>
            <th>Roles</th>
        </tr>
        <tbody>
            <tr>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.Email</td>
                <td>@Model.RegisteredAt</td>
                @if (Model.IsVerified == null)
                {
                    <td>false</td>    
                }
                else
                {
                    <td>@Model.IsVerified</td>
                }
                <td>@Model.Balance</td>
                <td>
                    @foreach (var modelRole in Model.Roles)
                    {
                        <div>
                            @modelRole
                        </div>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>