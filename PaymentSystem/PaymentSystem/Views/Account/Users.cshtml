@model List<PaymentSystem.Models.UserProfileModel>

<div>
    <table class="table table-striped table-dark">
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Registered at</th>
            <th>Is verified</th>
            <th>Balance</th>
            <th>Roles</th>
        </tr>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.RegisteredAt</td>
                    @if (user.IsVerified == null)
                    {
                        <td>false</td>
                    }
                    else
                    {
                        <td>@user.IsVerified</td>
                    }
                    <td>@user.Balance</td>
                    <td>@user.Role</td>
                </tr>   
            }
        </tbody>
    </table>
</div>